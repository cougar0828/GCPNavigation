<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/applicaion_animation_style</item>
    </style>

    <!-- Application animation -->
    <style name="applicaion_animation_style">
        <item name="android:activityCloseEnterAnimation">@anim/android:fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/android:fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/android:fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/android:fade_out</item>
    </style>

    <!-- Navigation Drarawer Menu -->
    <style name="drawerMenu">
        <item name="android:textColor">@color/normal_gray</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="drawerMenuAccount">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    

    <!-- New Journey -->
    <style name="newJourney_address">
        <item name="android:textColor">@color/normal_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Journey List -->
    <style name="journeyList_name">
        <item name="android:textColor">@color/normal_gray</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Journey Result -->
    <style name="journeyResult_title">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/normal_gray</item>
    </style>


</resources>