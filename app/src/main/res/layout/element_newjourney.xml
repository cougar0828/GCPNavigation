<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/journeyNum"
        style="@style/newJourney_address"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/journeyAddress"
        style="@style/newJourney_address"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" />

    <!--<com.gc.materialdesign.views.ProgressBarCircularIndeterminate-->
    <!--android:id="@+id/journeyCheck"-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:visibility="invisible"></com.gc.materialdesign.views.ProgressBarCircularIndeterminate>-->

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/light_gray"></View>


    <ImageView
        android:id="@+id/journeyOK"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_checkok" />

</LinearLayout>



