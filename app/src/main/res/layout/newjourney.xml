<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.gms.maps.MapView
        android:id="@+id/googleMap"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"></com.google.android.gms.maps.MapView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="12.5dp"
        android:background="@color/light_gray"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/journeyCheckList"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:layout_margin="12.5dp"
        android:background="@color/light_gray"></View>


    <com.gc.materialdesign.views.ButtonRectangle
        android:id="@+id/scheduleForMe"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="#1E88E5"
        android:text="@string/str_scheduleJourney" />


</LinearLayout>
